<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane onKeyPressed="#onKeyPressed" prefHeight="400.0" prefWidth="600.0" stylesheets="@AppStyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controller.UpdatePriceWindowController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" spacing="15.0">
            <children>
                <HBox alignment="CENTER" prefHeight="40.0" prefWidth="600.0" spacing="10.0">
               <children>
                  <Text fx:id="textProductTitle" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="heading-1" text="Product" />
               </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="40.0" prefWidth="600.0" spacing="10.0">
                    <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" styleClass="heading-2" text="Price:" />
                        <TextField fx:id="fieldNewPrice" prefHeight="25.0" prefWidth="200.0" promptText="new price" styleClass="field-line">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></TextField>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="40.0" prefWidth="600.0" spacing="25.0">
                    <children>
                        <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#onClickUpdate" styleClass="btn-info" text="Update" />
                        <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#onClickCancel" styleClass="btn-info" text="Cancel" />
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
            </children>
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="75.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
