<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane onKeyPressed="#onKeyPressed" prefHeight="400.0" prefWidth="600.0" stylesheets="@AppStyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controller.NewProductWindowController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" spacing="15.0">
         <children>
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="600.0" spacing="10.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" styleClass="heading-2" text="Title:" />
                  <TextField fx:id="fieldTitle" prefHeight="25.0" prefWidth="200.0" promptText="product name" styleClass="field-line" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="600.0" spacing="10.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" styleClass="heading-2" text="Price:" />
                  <TextField fx:id="fieldPrice" prefHeight="25.0" prefWidth="200.0" promptText="product price" styleClass="field-line" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="600.0" spacing="25.0">
               <children>
                  <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#onClickCancel" styleClass="btn-info" text="Cancel" />
                  <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#onClickAdd" styleClass="btn-info" text="Add" />
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="125.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
