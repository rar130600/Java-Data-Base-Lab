<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@AppStyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controller.LoginWindowController">
   <children>
      <VBox alignment="CENTER" fillWidth="false" prefHeight="400.0" prefWidth="600.0" spacing="15.0" stylesheets="@AppStyle.css">
         <padding>
            <Insets left="50.0" right="50.0" />
         </padding>
         <children>
            <Label text="DataBase">
               <styleClass>
                  <String fx:value="heading-1" />
                  <String fx:value="label-default" />
               </styleClass>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="loginField" maxHeight="50.0" maxWidth="300.0" minHeight="35.0" minWidth="275.0" promptText="login">
               <styleClass>
                  <String fx:value="field-line" />
                  <String fx:value="big" />
               </styleClass>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <font>
                  <Font size="24.0" />
               </font></TextField>
            <PasswordField fx:id="passwordField" minHeight="35.0" minWidth="275.0" promptText="password" styleClass="field-line" />
            <Button alignment="CENTER" contentDisplay="CENTER" minHeight="35.0" minWidth="100.0" mnemonicParsing="false" onAction="#onClickButton" styleClass="btn-default" text="sign in">
               <VBox.margin>
                  <Insets top="65.0" />
               </VBox.margin></Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
